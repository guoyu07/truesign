.line-body {
    position: absolute;
    top: 2px;
    left: 2px;
    right: 2px;
    height: 1px;
    background: #fff
    opacity 0.8
    transform all 2s
}

.line:after,.line:before {
    content: '';
    display: block;
    position: absolute;
    top: 1px;
    width: 3px;
    height: 3px;
    background: url(/static/img/html/line_end_2x.png) center no-repeat;
    background-size: 3px 3px;
    border-radius: 3px
}

.line:before {
    left: 1px
}

.line:after {
    right: 1px
}


.line-start {
    //top: 2.375em;
    transform: translate(-50%,-50%);
    //
    left: 50%;
    width 100%
    //margin-top 10px
    //margin-left -15%

}

.line_animation_tip{
    animation: line_tip 2s infinite;
}


@keyframes line_tip {
    0%{
        width: 1%;
    }
    50%{
        width: 3%;
    }
    100%{
        width: 1%;
    }
}

